-- best_selling_games
SELECT *
FROM game_sales
ORDER BY games_sold DESC
LIMIT 10;

-- critics_top_ten_years
SELECT g.year,
		COUNT(g.name) as num_games,
		ROUND(AVG(r.critic_score),2) as avg_critic_score
FROM game_sales as g
INNER JOIN reviews as r
ON g.name = r.name
GROUP BY g.year
HAVING COUNT(g.name) >= 4
ORDER BY avg_critic_score DESC
LIMIT 10;

-- golden_years
SELECT u.year,
		u.num_games,
		c.avg_critic_score,
		u.avg_user_score,
		c.avg_critic_score - u.avg_user_score as diff
FROM critics_avg_year_rating as c
INNER JOIN users_avg_year_rating as u
ON c.year = u.year
WHERE c.avg_critic_score > 9 OR u.avg_user_score > 9
ORDER BY year ASC;
